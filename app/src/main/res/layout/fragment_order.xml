<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order.OrderFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="2dp"
        android:orientation="vertical"
        android:padding="3px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbarOrder">

        <LinearLayout
            android:layout_width="397dp"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btbell"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_bell_1_128px" />

            <SearchView
                android:id="@+id/searchView"
                android:layout_width="339dp"
                android:layout_height="match_parent"
                android:iconifiedByDefault="false"
                android:textColor="@color/colorText"
                android:theme="@style/MyEditText">

            </SearchView>
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMenu"
            android:layout_width="405dp"
            android:layout_height="409dp">

        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="總金額"
                android:textColor="@color/colorText"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/edTotal"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:inputType="phone"
                android:text="0"
                android:textColor="@color/colorText"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btChect"
            android:layout_width="170dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:background="@drawable/buttomstyle"
            android:padding="2px"
            android:text="確定"
            android:textColor="@color/colorText"
            android:textSize="24sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>